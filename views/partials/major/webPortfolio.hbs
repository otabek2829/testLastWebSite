{{> header/admin-nav}}
<div class="CommandUser">
    <div class="title text-center my-5">
        <h3>{{title}}</h3>
    </div>
</div>

<!-- List Group Items -->
<div class="portfolio-list-group-items admin-portfolio-page">
    <div class="container">
        <div class="row flex-column">
            <div class="col-12">
                <div class="list-group" id="list-tab" role="tablist">

                    <!-- Button father -->

                    <!-- Разработка сайтов -->
                    <a class="list-group-item list-group-item-action active"
                        href="/admin/portfolio/webPortfolio">Разработка
                        сайтов</a>


                    <!-- Логотипы, баннера -->
                    <a class="list-group-item " href="/admin/portfolio/logoBanner">Логотипы, баннера</a>

                    <!-- SMM-продвижение -->
                    <a class="list-group-item " href="/admin/portfolio/smm">SMM-продвижение</a>

                </div>
            </div>

            <div class="col-12">
                <div class="tab-content" id="nav-tabContent">

                    <!-- Button bosilganda u haqida ma\lumot chiqishi -->

                    <!-- Разработка сайтов -->
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel"
                        aria-labelledby="list-home-list">
                        <div class="row">
                            {{#each portfolio }}
                            <div class="col-4 box my-5">
                                <div class="image">
                                    <a href="#">
                                        <img src="/images/{{this.img}}" alt="{{this.webAdress}}">
                                    </a>
                                </div>
                                <div class="body-text ">
                                    <h6 class="m-0">Проект: <strong>{{this.webAdress}}</strong></h6>
                                    <p class="m-0">{{this.aboutText}}</p>
                                </div>
                                <div class="delete">
                                    <a href="/admin/portfolio/webPortfolio/delete/{{this._id}}">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </div>
                            {{/each}}
                            <div class="col-4 my-5 text-center send-box px-0">
                                <form action="/admin/portfolio/webPortfolio" method="POST" enctype="multipart/form-data">
                                    <div class="img-page">
                                        <h3>350x310</h3>
                                    </div>
                                    <input type="file" name="img" title="your text" class="userImage"
                                        accept="image/png, image/jpg, image/jpeg" / required>
                                    <div class="card-body p-0 ">
                                        <label for="">Portfolio URL adress</label>
                                        <input type="text" name="webAdress" id="webAdress" required
                                            placeholder="www.portfolio.uz">
                                        <label for="">Portfolio about text</label>
                                        <input type="text" name="aboutText" id="aboutText" autocomplete="off" required>
                                    </div>
                                    <button type="submit" class=" sendFileButton ">Send File</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

