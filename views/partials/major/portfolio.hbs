{{> header/admin-nav}}
<div class="CommandUser">
    <div class="title text-center my-5">
        <h2>{{title}}</h2>
    </div>
</div>

<!-- List Group Items -->
<div class="portfolio-list-group-items admin-portfolio-page">
    <div class="container">
        <div class="row flex-column">
            <div class="col-12">
                <div class="list-group" id="list-tab" role="tablist">

                    <!-- Button father -->

                    <!-- Разработка сайтов -->
                    <a class="list-group-item list-group-item-action "
                        href="/admin/portfolio/webPortfolio" >Разработка
                        сайтов</a>


                    <!-- Логотипы, баннера -->
                    <a class="list-group-item " 
                        href="/admin/portfolio/logoBanner" >Логотипы, баннера</a>

                    <!-- SMM-продвижение -->
                    <a class="list-group-item  " 
                        href="/admin/portfolio/smm" >SMM-продвижение</a>

                </div>
            </div>
            <div class="col-12">
                <div class="tab-content" id="nav-tabContent">

                    <!-- Button bosilganda u haqida ma\lumot chiqishi -->

                    <!-- Разработка сайтов -->
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel"
                        aria-labelledby="list-home-list">
                        <div class="row">
                            {{#each portfolio }}
                            <div class="col-4 box my-3">
                                <div class="image">
                                    <a href="#">
                                        <img src="/images/{{this.img}}" alt="{{this.webAdress}}">
                                    </a>
                                </div>
                                <div class="body-text ">
                                    <h6 class="m-0">Проект: <strong>{{this.webAdress}}</strong></h6>
                                    <p class="m-0">{{this.aboutText}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Bootstrap JS Ulanishi --}}
