{{> header/admin-nav}}
<div class="CommandUser">
    <div class="title text-center my-5">
        <h3>{{title}}</h3>
    </div>
</div>


<section>

    <div class="container cards">
        <div class="row justify-content-between">
            {{#each data}}
            <div class="col-4 box my-3">
                <div class="body-text">
                    <h2>{{this.title}}</h2>
                    <p>{{this.bodyText}}</p>
                    <div class="price">от {{this.price}} / {{this.timeData}}</div>
                <a class="updateBtn" href="/admin/cardModels/update/{{this._id}}"><i
                        class="bi bi-pencil"></i></a>
                <a class="deleteBtn" href="/admin/cardModels/delete/{{this._id}}"><i
                        class="bi bi-trash3"></i></a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


    <div class="addListFormPage">
         {{#if bodyText}}
           <form  method="POST">
            <h6>{{title}}</h6>
            <input type="text" name="title" id="" placeholder="Cards title" required value="{{title}}"> <br>
            <textarea name="bodyText" id="" cols="30" rows="5" placeholder="Cards text" required >{{bodyText}}</textarea>
            <input type="number" name="price" placeholder="Price" required value="{{price}}"  > <br>
            <input type="text" name="timeData" placeholder="Data Time" value="{{timeData}}"> <br>

            <button type="submit">{{button}}</button>
        </form>
         {{else}} 
        <form action="/admin/cardModels" method="POST">
            <h6>{{title}}</h6>
            <input type="text" name="title" id="" placeholder="title"  required> <br>
            <textarea name="bodyText" id="" cols="30" rows="5" placeholder="text" required></textarea>
            <input type="number" name="price" placeholder="Price" required> <br>
            <input type="text" name="timeData" placeholder="Data Time"> <br>

            <button type="submit">Add List</button>
        </form>
        {{/if}}
    </div>
</section>


