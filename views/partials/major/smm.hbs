{{> header/admin-nav}}
<div class="CommandUser">
    <div class="title text-center my-5">
        <h3>{{title}}</h3>
    </div>
</div>

<!-- List Group Items -->
<div class="portfolio-list-group-items admin-portfolio-page logoBanner">
    <div class="container">
        <div class="row flex-column">
            <div class="col-12">
                <div class="list-group" id="list-tab" role="tablist">

                    <!-- Button father -->

                    <!-- Разработка сайтов -->
                    <a class="list-group-item list-group-item-action " 
                        href="/admin/portfolio/webPortfolio">Разработка
                        сайтов</a>


                    <!-- Логотипы, баннера -->
                    <a class="list-group-item " 
                        href="/admin/portfolio/logoBanner" >Логотипы, баннера</a>

                    <!-- SMM-продвижение -->
                    <a class="list-group-item active " 
                        href="/admin/portfolio/smm" >SMM-продвижение</a>

                </div>
            </div>

            <div class="col-12">
                <div class="tab-content" id="nav-tabContent">

                    <!-- Button bosilganda u haqida ma\lumot chiqishi -->

                    <!-- Разработка сайтов -->
                    <div class="tab-pane fade show active" id="list-home" role="tabpanel"
                        aria-labelledby="list-home-list">
                        <div class="row">
                            {{#each data }}
                            <div class="col-4 box my-3">
                                <div class="image">
                                        <img src="/images/{{this.img}}" alt="{{this.webAdress}}">
                                </div>
                                  <div class="delete">
                                    <a href="/admin/portfolio/smm/delete/{{this._id}}">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </div>
                            {{/each}}
                            <div class="col-4 my-3 text-center send-box px-0">
                                <form action="/admin/portfolio/smm" method="POST" enctype="multipart/form-data">
                                    <div class=" logoBanner-img img-page mb-5">
                                        <h3>410x410</h3>
                                    </div>
                                    <input type="file" name="img" title="your text" class="userImage"
                                        accept="image/png, image/jpg, image/jpeg" / required>
                                    <button class=" sendFileButton ">Send File</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

